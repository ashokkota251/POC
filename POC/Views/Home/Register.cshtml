@{
    ViewData["Title"] = "Register";
}


<div class="row justify-content-center">
    <div class="col-4">
        <form>
            <div class="form-group">
                <label for="txtName">Full Name</label>
                <input type="text" class="form-control" id="txtName" placeholder="Name" required>
            </div>
            <div class="form-group">
                <label for="txtEmail">Email</label>
                <input type="email" class="form-control" id="txtEmail" placeholder="Email" required>
            </div>
            <div class="form-group">
                <label for="txtPhone">Phone Number</label>
                <input type="text" class="form-control" id="txtPhone" placeholder="Phone" ondrop="return false;" onpaste="return false;" min="10" maxlength="10">
            </div>
            <button type="submit" class="btn btn-primary float-right" id="btnRegister">Register</button>
        </form>
    </div>
</div>

@section scripts {
<script>
    $(document).ready(function () {
        $('.nav-item').removeClass('active');
        $('#navRegister').addClass('active');
    });


    $('#btnRegister').click(function () {
        var objUsers = {
            "FullName": $('#txtName').val(),
            "Email": $('#txtEmail').val(),
            "Phone": $('#txtPhone').val()
        }
        var UsersList = JSON.parse(localStorage.getItem('Users')) === null ? [] : JSON.parse(localStorage.getItem('Users'));

        UsersList.push(objUsers);
        localStorage.setItem('Users', JSON.stringify(UsersList));
        console.log(UsersList);
        alert('Successfully Registred');

        $(input).val('');
    });

    $("#txtPhone").keypress(function (e) {
        if (e.which != 8 && e.which != 0 && (e.which < 48 || e.which > 57)) {
            return false;
        }
    });

</script>
}